{
  "name": "tunesplit",
  "private": true,
  "version": "2.2.7",
  "type": "module",
  "main": "dist/backend",
  "scripts": {
    "dev": "vite",
    "build-frontend": "tsc --build tsconfig.frontend.json && vite build",
    "build-backend": "tsc --build tsconfig.backend.json",
    "build": "npm run build-frontend && npm run build-backend",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "node .",
    "start-prod": "npm run build && npm start",
    "start-dev": "vite build --watch & nodemon --watch ./src/backend --ignore ./dist/ --exec \"npm run build-backend && npm start\"",
    "dev-frontend": "npm run dev",
    "docker": "docker compose up --build",
    "docker-deploy": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up --build --detach"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@mantine/core": "^6.0.15",
    "@mantine/dropzone": "^6.0.15",
    "@mantine/hooks": "^6.0.15",
    "@tabler/icons-react": "^2.23.0",
    "archiver": "^5.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-ws": "^5.0.2",
    "file-type": "^18.7.0",
    "find-remove": "^4.1.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.2",
    "@types/express": "^4.17.17",
    "@types/express-ws": "^3.0.4",
    "@types/find-remove": "^2.0.1",
    "@types/multer": "^1.4.7",
    "@types/node-cron": "^3.0.8",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "git-cz": "^4.9.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "typescript": "^5.0.2",
    "vite": "^4.3.9"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
